@@ -153,6 +153,18 @@ public class SynchedEntityData {
     }
     // CraftBukkit end
 
+    // Andromeda start - Port PaperMC/Paper#8695
+    public <T> void markDirtyIfNotDefault(EntityDataAccessor<T> datawatcherobject) {
+        if (this.entity.level.andromedaLevelConfiguration().paperPullRequestsPort.avoidRespawnDesyncOfPlayerMetadata) {
+            DataItem<T> item = this.getItem(datawatcherobject);
+            if (!item.isSetToDefault()) {
+                item.setDirty(true);
+                this.isDirty = true;
+            }
+        }
+    }
+    // Andromeda end
+
     public boolean isDirty() {
         return this.isDirty;
     }
