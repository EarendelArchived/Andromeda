@@ -191,6 +191,8 @@ public class LevelConfigurations extends ConfigurationPart {
 
         public boolean fixHumanEntityDropNotUpdatingTheClientInventory = true;
 
+        public boolean fireEntityKnockbackEventForOwnerlessTnt = true;
+
     }
 
 }
