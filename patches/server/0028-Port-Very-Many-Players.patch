@@ -80,4 +80,9 @@ public class LevelConfigurations extends ConfigurationPart {
 
     }
 
+    public VeryManyPlayers veryManyPlayers;
+    public class VeryManyPlayers extends ConfigurationPart {
+        public boolean skipEntityMoveIfNoMovement = true;
+    }
+
 }
